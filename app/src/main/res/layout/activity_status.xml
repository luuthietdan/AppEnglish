<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Status">
    <include layout="@layout/app_toolbar_layout" android:id="@+id/status_toolbar"/>

    <EditText
        android:id="@+id/status_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="8dp"

        android:background="@color/colorPrimaryDark"
        android:hint="How do you feel?"
        android:textColorHint="@color/statusblack"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveStatus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.877"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/btnSaveStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginBottom="292dp"
        android:background="@drawable/custom_button"
        android:text="@string/save_changes"
        android:textSize="@dimen/Sizescore"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />
</android.support.constraint.ConstraintLayout>